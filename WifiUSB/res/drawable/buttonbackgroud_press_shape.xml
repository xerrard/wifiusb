<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 填充的颜色 -->
    <!-- <solid android:color="@color/clientbackgroundcolor" /> -->

    <gradient
        android:angle="270"
        android:endColor="@color/buttonbackgroundendcolor"
        android:startColor="@color/buttonbackgroundstartcolor"
        android:type="linear" />

    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners
        android:radius="20dp"/>

    <!-- padding: 里面的文字与边界的间隔 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
    <stroke android:width="0.5dp" android:color="@color/darkgray" /> 

</shape>